{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "lib",
    "resolveJsonModule": false,
    // "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2015",
    "noUnusedLocals": true,
    "allowJs": true
  },
  "include": ["src/**/*.js", "src/**/*.jsx"]
}
